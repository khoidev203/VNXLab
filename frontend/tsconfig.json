{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "redux/*": ["Redux/*"],
      "component/*": ["Component/*"],
      "data/*": ["Data/*"],
      "assets/*": ["Assets/*"],
      "layout/*": ["Layout/*"],
      "config/*": ["Config/*"],
      "scss/*": ["Scss/*"],
      "route/*": ["Route/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
